<config>
    <endpoint>
        <verbs>SOURCE,SINK,DELETE,EXISTS</verbs>
        <grammar>
            <active>
                <identifier>active:f</identifier>
                <argument name="name"/>
            </active>
        </grammar>
        <request>
            <identifier>pds:/webscript/f/[[arg:name]]</identifier>
        </request>
    </endpoint>

    <endpoint>
        <verbs>SOURCE,SINK,DELETE,EXISTS</verbs>
        <grammar>
            <simple>f:{name}</simple>
        </grammar>
        <request>
            <identifier>active:f</identifier>
            <argument name="name">arg:name</argument>
        </request>
    </endpoint>

    <endpoint>
        <grammar>
            <active>
                <identifier>active:apply</identifier>
                <argument name="function"/>
                <argument name="args"/>
            </active>
        </grammar>
        <request>res:/dummy</request>
    </endpoint>

    <endpoint>
        <grammar>
            <simple>{function}({args})</simple>
        </grammar>
        <request>
            <identifier>active:apply</identifier>
            <argument name="function">f:[[arg:function]]</argument>
            <argument name="args">arg:args</argument>
        </request>
    </endpoint>

    <endpoint>
        <id>urn:net:lazygun:webscript:ExampleEndpoint</id>
        <name>Example Service</name>
        <description>Example Groovy service generated by New Module Wizard</description>
        <grammar>res:
            <group name="service">/WebScript/service</group>/
            <group name="value">
                <regex type="anything"/>
            </group>
        </grammar>
        <request>
            <identifier>active:groovy</identifier>
            <argument name="operator">res:/resources/endpoints/example.gy</argument>
            <argument method="as-string" name="value">arg:value</argument>
        </request>
    </endpoint>
</config>